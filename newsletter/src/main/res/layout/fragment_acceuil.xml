<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:layout_marginBottom="5dp"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/openByEditor"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="PAR EDITEUR"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="16dp" />
    <Button
        android:id="@+id/openCategory"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="20dp"
        android:text="PAR CATEGORIE"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"

        />
    <Button
        android:id="@+id/openByCountry"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="20dp"
        android:text="PAR PAYS"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/openByEditor"
        app:layout_constraintTop_toBottomOf="@+id/openCategory"
        />


</androidx.constraintlayout.widget.ConstraintLayout>