<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/developper_infos"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginTop="5dp"
            tools:listitem="@layout/aproposdenous_item" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fonctionalities_infos"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_column="0"
            android:layout_row="1"
            tools:listitem="@layout/fonctionnalitie_item"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/librairies_infos"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_column="0"
            android:layout_row="2"
            tools:listitem="@layout/external_librairie_item"
            />
    </GridLayout>




</androidx.constraintlayout.widget.ConstraintLayout>